<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoProcess">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_photoProcess"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageView_process"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/toolbar_photoProcess"
        app:layout_constraintBottom_toTopOf="@id/allScoreWrap"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/allScoreWrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imageView_process"
        app:layout_constraintBottom_toTopOf="@id/confirm_editedResult"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scoreWrap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scoreWrap2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 1:"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score1"/>
            <EditText
                android:id="@+id/score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16dp"
                android:inputType="numberSigned"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName1"
                app:layout_constraintRight_toLeftOf="@id/scoreName2"/>

            <TextView
                android:id="@+id/scoreName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 2:"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@id/score1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score2"/>
            <EditText
                android:id="@+id/score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16dp"
                android:inputType="numberSigned"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName2"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scoreWrap2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scoreWrap1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scoreWrap3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 3:"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score3"/>
            <EditText
                android:id="@+id/score3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:inputType="numberSigned"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName3"
                app:layout_constraintRight_toLeftOf="@id/scoreName4"/>

            <TextView
                android:id="@+id/scoreName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 4:"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@id/score3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score4"/>
            <EditText
                android:id="@+id/score4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16dp"
                android:inputType="numberSigned"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName4"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scoreWrap3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scoreWrap2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scoreWrap4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 5:"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score5"/>
            <EditText
                android:id="@+id/score5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16dp"
                android:inputType="numberSigned"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName5"
                app:layout_constraintRight_toLeftOf="@id/scoreName6"/>

            <TextView
                android:id="@+id/scoreName6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 6:"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@id/score5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score6"/>
            <EditText
                android:id="@+id/score6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:inputType="numberSigned"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName6"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scoreWrap4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scoreWrap3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/scoreWrap5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreName7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 7:"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score7"/>
            <EditText
                android:id="@+id/score7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16dp"
                android:inputType="numberSigned"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName7"
                app:layout_constraintRight_toLeftOf="@id/scoreName8"/>

            <TextView
                android:id="@+id/scoreName8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 8:"
                android:textSize="16dp"
                app:layout_constraintLeft_toRightOf="@id/score7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score8"/>
            <EditText
                android:id="@+id/score8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:inputType="numberSigned"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName8"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scoreWrap5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/scoreWrap4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/scoreName9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 9:"
                android:textSize="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score9"/>
            <EditText
                android:id="@+id/score9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16dp"
                android:inputType="numberSigned"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName9"
                app:layout_constraintRight_toLeftOf="@id/scoreName10"/>

            <TextView
                android:id="@+id/scoreName10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position 10:"
                android:textSize="16dp"

                app:layout_constraintLeft_toRightOf="@id/score9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/score10"/>
            <EditText
                android:id="@+id/score10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:inputType="numberSigned"
                android:textSize="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/scoreName10"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_editedResult"
        android:text="Confirm"
        app:layout_constraintTop_toBottomOf="@id/allScoreWrap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>