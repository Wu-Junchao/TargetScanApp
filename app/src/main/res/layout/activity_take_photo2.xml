<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".TakePhoto"
    android:background="@color/appBackground">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar2"
        android:background="?colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/info1"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@color/textColor"
        android:text="Discipline: {placeholder}\t\t\tDate: {Placeholder}"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar2"
        app:layout_constraintBottom_toTopOf="@id/guideText"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/guideText"
        android:textSize="17sp"
        android:textColor="@color/textColor"
        android:text="@string/photo_guide2"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar2"
        app:layout_constraintBottom_toTopOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:lineSpacingMultiplier="1.1"/>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="345dp"
        android:layout_height="460dp"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/guideText"
        app:layout_constraintBottom_toTopOf="@id/buttonWrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="345dp"
        android:layout_height="460dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/guideText"
        app:layout_constraintBottom_toTopOf="@id/buttonWrap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWrap"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Capture"
            android:textSize="13sp"
            android:layout_marginVertical="10dp"
            android:id="@+id/takePhotoBtn"
            android:background="@drawable/button_style2"
            android:textColor="@color/textColor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cancelPhotoBtn"
            app:layout_constraintStart_toEndOf="@id/uploadBtn"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/confirmPhotoBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:background="@drawable/button_style2"
            android:text="use it"
            android:textColor="@color/textColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rotatePhotoBtn"
            app:layout_constraintTop_toTopOf="@id/cancelPhotoBtn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Upload from album"
            android:textSize="12sp"
            android:id="@+id/uploadBtn"
            android:background="@drawable/button_style2"
            android:textColor="@color/textColor"
            app:layout_constraintEnd_toStartOf="@id/takePhotoBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cancelPhotoBtn" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Rotate 90Â°"
            android:textSize="12sp"
            android:id="@+id/rotatePhotoBtn"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_style2"
            android:textColor="@color/textColor"
            app:layout_constraintStart_toEndOf="@id/cancelPhotoBtn"
            app:layout_constraintEnd_toStartOf="@id/confirmPhotoBtn"
            app:layout_constraintTop_toTopOf="@id/cancelPhotoBtn"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/button_style2"
            android:textColor="@color/textColor"
            android:id="@+id/cancelPhotoBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rotatePhotoBtn"
            app:layout_constraintTop_toBottomOf="@id/takePhotoBtn"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>