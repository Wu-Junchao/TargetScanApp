<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Style.MonthYearPickerDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:background">@color/white_40</item>
        <item name="buttonBarNegativeButtonStyle">@style/Style.DialogButton.Black</item>
        <item name="buttonBarPositiveButtonStyle">@style/Style.DialogButton.primary</item>
        <item name="headerBackgroundColor">@color/lime_50</item>
        <item name="headerTextColor">#66000000</item>
        <item name="headerTextColorSelected">@color/textColor</item>
        <item name="monthBackgroundColorSelected">@color/lime_50</item>
        <item name="monthTextColor">@color/textColor</item>
        <item name="monthTextColorDisabled">#4F000000</item>
        <item name="monthTextColorSelected">@color/textColor</item>
        <item name="yearTextColor">@color/textColor</item>
        <item name="yearTextColorSelected">@color/light_green</item>

    </style>
    <style name="Style.DialogButton.Black" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Style.DialogButton.primary" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/light_green</item>
    </style>

</resources>